@{
    ViewData["Title"] = "Reports Page";

}

@model ReportViewModel



<div class="text-center">
    <h1 class="display-4">Reports</h1>
    @foreach (var item in Model.Tickets)
    {
        <div class="ticket-item" data-id="@item.ReportId" >
            <table class="table-borderless spam-table">
                <tr>
                    <td class="text-left"><label>Id: <span><strong>@item.ReportId</strong></span></label></td>
                    <td class="text-left"><label>Type: <span><strong>@item.ReportType</strong></span></label></td>
                    <td><button id="btnBlockReport" class="block-button btn btn-danger btn-block" data-id="@item.ReportId"> Block </button></td>
                </tr>
                <tr>
                    <td class="text-left"><label>State: <span><strong>@item.State</strong></span></label></td>
                    <td class="text-left"><label>Message: <span><strong>@item.Message</strong></span></label></td>
                    <td><button id="btnResolveReport" class="resolve-button  btn btn-success btn-block" data-id="@item.ReportId"> Resolve </button></td>
                </tr>
                <tr>
                    <td colspan="3" class="text-left"><a href="#">Details</a></td>
                    </tr>
            </table>
        </div>
    }

</div>
@section Scripts
{
    <script src="~/js/reports.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $(document).ready()
        {
            $(".block-button").click(blockHandler);
            $(".resolve-button").click(resolveHandler);


        
        }
    </script>
}
